<h1 id="sign_up">Sign Up</h1>

<form action="<%= users_url %>" method="POST" accept-charset="utf-8">
  <fieldset>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="email">Email</label>
    <input type="text" name="user[email]" value="<%= @user.email %>" id="email">

    <label for="password">Password</label>
    <input type="password" name="user[password]" value="" id="password">
  </fieldset>

  <fieldset>
    <%= render 'shared/post_form', post: @post %>
  </fieldset>
  <p><input type="submit" value="Continue &rarr;"></p>
</form>